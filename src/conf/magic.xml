<magic>
    <!-- Dummy -->
    <bean class="org.devyant.magicbeans.AppTest$Dummy">
        <Configuration>
        </Configuration>
        
        <!-- Dummy.name -->
        <name>
            <Configuration>
                <visible>false</visible>
            </Configuration>
        </name>
        
        <!-- Dummy.description -->
        <description>
            <Configuration>
                <nested>false</nested>
                <values>dummy.collection</values>
            </Configuration>
        </description>
        
        <!-- Dummy.bye -->
        <bye>
        </bye>
        
        <!-- Dummy.date -->
        <date>
            <Configuration>
            	<visible>true</visible>
            	<validation enabled="true">
                    <class>org.devyant.AppTest</class>
                    <method>validateDate</method>
            	</validation>
            </Configuration>
        </date>
        
        <!-- Dummy.dummy -->
        <dummy>
            <Configuration>
                <validation enabled="true" />
                <!-- <nested>false</nested> -->
            </Configuration>
            
            <!-- Dummy.dummy.collection -->
            <collection>
                <Configuration>
                    <nested>false</nested>
                    <validate>true</validate>
                    <collection>
                        <class>java.lang.Integer</class>
                    </collection>
                    <!-- property overrides -->
                    <magic>
                        <gui><collections><style>combo</style></collections></gui>
                        <stuff>yeh</stuff>
                    </magic>
                </Configuration>
                
            </collection>
        </dummy>
        
    </bean>
    
    <bean class="java.lang.String">
        <Configuration>
        	<visible>true</visible>
        </Configuration>
    </bean>
    
</magic>