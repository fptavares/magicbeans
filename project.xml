<project>
  <!-- the version of maven's project object model -->
  <pomVersion>3</pomVersion>
  
  <groupId>magicbeans</groupId>
  
  <!-- a unique name for this project -->
  <artifactId>magicbeans</artifactId>
  
  <!-- a short but descriptive name for the project -->
  <name>Magic Beans</name>
  
  <!-- The version of the project under development, e.g.
       1.1, 1.2, 2.0-SNAPSHOT -->
  <currentVersion>0.2</currentVersion>
  
  <!-- details about the organization that 'owns' the project -->
  <organization>
    <name>devyant</name>
    <url>http://www.devyant.org/</url>
    <logo>http://www.devyant.org/images/devyant.jpg</logo>
  </organization>
  
  <!-- the year the project started -->
  <inceptionYear>2005</inceptionYear>
  <package>org.devyant.${pom.groupId}</package>
  <logo></logo>
  <description>
    A set of Java libraries that provide direct mapping between graphical components
    and you Java beans. Forms may be automatically generated through your
	beans and their public fields.
  </description>
  
  <!-- a short description of what the project does -->
  <shortDescription>Direct Component&lt;-&gt;Bean mapping and automatic graphical form generation.</shortDescription>
  
  <!-- the project home page -->
  <url>http://www.devyant.org/${pom.groupId}/</url>
  
  <!-- the version control repository and http url for online access
       the connection element has the form:
       scm:<system>:<system specific connection string> -->
  <siteAddress>shell.sourceforge.net</siteAddress>
  <siteDirectory>/home/groups/m/ma/magicbeans/htdocs/</siteDirectory>
  <repository>
    <connection>scm:cvs:pserver:anonymous@cvs.sourceforge.net:/cvsroot/${pom.groupId}:${pom.artifactId}</connection>
    <developerConnection>
      scm:cvs:ext:${maven.username}@cvs.sourceforge.net:/cvsroot/${pom.groupId}:${pom.artifactId}
    </developerConnection>
    <url>http://cvs.sourceforge.net/cgi-bin/viewcvs.cgi/${pom.groupId}/${pom.artifactId}/</url>
  </repository>
  
  <versions>
  </versions>
  
  <!-- any mailing lists for the project -->
  <mailingLists>
    <mailingList>
      <name>${pom.name} User Mailing list</name>
      <subscribe>http://lists.sourceforge.net/lists/listinfo/${pom.groupId}-user</subscribe>
      <unsubscribe>http://lists.sourceforge.net/lists/listinfo/${pom.groupId}-user</unsubscribe>
      <archive>http://sourceforge.net/mailarchive/forum.php?forum=${pom.groupId}-user</archive>
    </mailingList>
    <mailingList>
      <name>${pom.name} Developer Mailing list</name>
      <subscribe>http://lists.sourceforge.net/lists/listinfo/${pom.groupId}-developer</subscribe>
      <unsubscribe>http://lists.sourceforge.net/lists/listinfo/${pom.groupId}-developer</unsubscribe>
      <archive>http://sourceforge.net/mailarchive/forum.php?forum=${pom.groupId}-developer</archive>
    </mailingList>
    <mailingList>
      <name>${pom.name} Cvs Mailing list</name>
      <subscribe>http://lists.sourceforge.net/lists/listinfo/${pom.groupId}-cvs</subscribe>
      <unsubscribe>http://lists.sourceforge.net/lists/listinfo/${pom.groupId}-cvs</unsubscribe>
      <archive>http://sourceforge.net/mailarchive/forum.php?forum=${pom.groupId}-cvs</archive>
    </mailingList>
  </mailingLists>
  
  <!-- who the developers are for the project -->
  <developers>

    <developer>
      <name>Filipe Tavares</name>
      <id>ftavares</id>
      <email>ftavares@devyant.org</email>
      <organization>devYant</organization>
    </developer>

  </developers>
  
  <licenses>
    <license>
      <name>GNU Lesser General Public License</name>
      <url>http://www.gnu.org/licenses/lgpl.html</url>
    </license>
  </licenses>
  
  <!-- jar files the project is dependent on -->
  <dependencies>
    <dependency>
      <groupId>commons-configuration</groupId>
      <artifactId>commons-configuration</artifactId>
      <version>1.1</version>
      <type>jar</type>
      <url>http://jakarta.apache.org/commons/configuration/</url>
      <properties>
        <comment>Required for the manipulating multiple configurations.</comment>
      </properties>
    </dependency>
    <dependency>
      <groupId>commons-lang</groupId>
      <artifactId>commons-lang</artifactId>
      <version>2.0</version>
      <type>jar</type>
      <url>http://jakarta.apache.org/commons/lang/</url>
      <properties>
        <comment>Required by commons-* and used for utilities.</comment>
      </properties>
    </dependency>
    <dependency>
      <groupId>commons-collections</groupId>
      <artifactId>commons-collections</artifactId>
      <version>3.1</version>
      <type>jar</type>
      <url>http://jakarta.apache.org/commons/collections/</url>
      <properties>
        <comment>Required by commons-configuration.</comment>
      </properties>
    </dependency>
    
    <dependency>
      <groupId>commons-logging</groupId>
      <artifactId>commons-logging</artifactId>
      <version>1.0.4</version>
      <type>jar</type>
      <url>http://jakarta.apache.org/commons/logging/</url>
      <properties>
        <comment>Required for logging.</comment>
      </properties>
    </dependency>
    
    <dependency>
      <groupId>jaxen</groupId>
      <artifactId>jaxen</artifactId>
      <version>1.1-beta-6</version>
      <type>jar</type>
      <url>http://www.jaxen.org/</url>
      <properties>
        <comment>Required for XPath engine.</comment>
      </properties>
    </dependency>
    
    <dependency>
      <groupId>nachocalendar</groupId>
      <artifactId>nachocalendar</artifactId>
      <version>0.21</version>
      <type>jar</type>
      <url>http://nachocalendar.sf.net/</url>
      <properties>
        <comment>Required for date graphical components.</comment>
      </properties>
    </dependency>
    
    <dependency>
      <groupId>ant</groupId>
      <artifactId>ant-optional</artifactId>
      <version>1.5.3-1</version>
      <properties>
        <classloader>root</classloader>
      </properties>
    </dependency>
    
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
       <properties>
        <classloader>root</classloader>
      </properties>
    </dependency>
    
  </dependencies>
  
  <!-- build information for the project -->
  <build>
    <nagEmailAddress>${pom.groupId}@devyant.org</nagEmailAddress>
	
    <sourceDirectory>src/java</sourceDirectory>
    <unitTestSourceDirectory>src/test</unitTestSourceDirectory>
    <unitTest>
      <includes>
        <include>**/*Test.java</include>
        <exclude>**/AppTest.java</exclude>
      </includes>
    </unitTest>
    <resources/>
  </build>
</project>
